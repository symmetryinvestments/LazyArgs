{
	"compilerOptions": {
		"declaration": true,
		"inlineSources": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"removeComments": true,
		"strictNullChecks": true,
		"sourceMap": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "dist",
		"target": "es5",
		"lib": ["es2015", "dom"],
		"experimentalDecorators": true
	},
	"rootDirs": ["src", "tests"]
}
